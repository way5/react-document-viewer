{
    "include": ["./src"],
    "exclude": ["./dist", "./node_modules/"],
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["DOM", "ES7"],
        "module": "ESNext",
        "moduleDetection": "auto",
        "moduleResolution": "Node",
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "ES2015",
        "types": ["node"],
        "allowJs": true,
    }
}
